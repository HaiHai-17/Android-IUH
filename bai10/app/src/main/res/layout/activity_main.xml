<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtKetqua"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/txtKetqua"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/edtKetqua"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtKetqua"
        android:layout_toRightOf="@+id/txtKetqua"
        android:layout_alignParentRight="true"
        android:text="DELETE"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="7"
        android:textSize="25sp"
        android:layout_below="@+id/btnDel"
        />

    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="8"
        android:textSize="25sp"
        android:layout_below="@+id/btnDel"
        android:layout_toRightOf="@+id/btn7"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="9"
        android:textSize="25sp"
        android:layout_below="@+id/btnDel"
        android:layout_toRightOf="@+id/btn8"
        />

    <Button
        android:id="@+id/btnthuong"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="%"
        android:textSize="25sp"
        android:layout_below="@+id/btnDel"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/btn9"
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="4"
        android:textSize="25sp"
        android:layout_below="@+id/btn7"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="5"
        android:textSize="25sp"
        android:layout_below="@+id/btn7"
        android:layout_toRightOf="@+id/btn4"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6"
        android:textSize="25sp"
        android:layout_below="@+id/btn7"
        android:layout_toRightOf="@+id/btn5"
        />

    <Button
        android:id="@+id/btntich"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="x"
        android:textSize="25sp"
        android:layout_below="@+id/btn7"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/btn6"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:textSize="25sp"
        android:layout_below="@+id/btn4"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"
        android:textSize="25sp"
        android:layout_below="@+id/btn4"
        android:layout_toRightOf="@+id/btn1"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:textSize="25sp"
        android:layout_below="@+id/btn4"
        android:layout_toRightOf="@+id/btn2"
        />

    <Button
        android:id="@+id/btnhieu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="-"
        android:textSize="25sp"
        android:layout_below="@+id/btn4"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/btn3"
        />

    <Button
        android:id="@+id/btncham"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="."
        android:textSize="25sp"
        android:layout_below="@+id/btn1"
        />

    <Button
        android:id="@+id/btn0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="0"
        android:textSize="25sp"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/btncham"
        />

    <Button
        android:id="@+id/btnbang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="="
        android:textSize="25sp"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/btn0"
        />

    <Button
        android:id="@+id/btntong"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="+"
        android:textSize="25sp"
        android:layout_below="@+id/btn1"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/btnbang"
        />
</RelativeLayout>

